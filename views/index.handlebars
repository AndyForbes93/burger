<h1>Eat Da Burgers!</h1>

<h2>Ready to Eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eaten=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2></h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eaten=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a New Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgerName">Burger Name:</label>
    <input type="text" id="burgerName" name="burgerName">
  </div>

  <div class="form-group">
    <label for="eaten">Have you already Eaten it?</label><br>
    <input type="radio" name="eaten" value="1" id="yesEaten" checked> Eaten!<br>
    <input type="radio" name="eaten" value="0" id="noEaten"> Not Eaten
  </div>

  <button type="submit">Add Burger</button>
</form>